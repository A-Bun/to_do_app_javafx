<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.geometry.Insets?>

<HBox spacing="0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" styleClass="full_page">
   <children>
      <HBox alignment="CENTER" spacing="20.0" fillHeight="true" HBox.hgrow="ALWAYS" styleClass="full_page">
         <children>
         <ScrollPane fx:id="scroll_pane" HBox.hgrow="ALWAYS" minHeight="200" minWidth="200" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" styleClass="edge-to-edge"> <!-- This style class hides the extra border that scrollpanes gain when in focus -->
               <content>
                  <VBox fillWidth="true" alignment="TOP_LEFT" fx:id="list_container" styleClass="list_container">
                     <children>
                        <HBox fx:id="all_lists_header" spacing="20.0">
                           <children>
                              <Label fx:id="options_label" text="Options" styleClass="header_label" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </HBox>
   </children>
   <padding>
        <Insets top="100.0" right="200.0" bottom="100.0" left="200.0" />
    </padding>
</HBox>
