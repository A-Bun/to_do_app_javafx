<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>

<HBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.todo.SpecificListController" alignment="CENTER" spacing="20.0" fillHeight="true" styleClass="full_page">
    <children>
        <BorderPane fx:id="border_pane" styleClass="list_container" HBox.hgrow="ALWAYS">
            <top>
                <HBox fx:id="top_content" alignment="CENTER" spacing="20.0" fillHeight="true" style="-fx-border-width:0px 0px 1px 0px; -fx-border-color:white">
                    <children>
                        <Button fx:id="all_lists_button" text="Back" onAction="#switchToAllListsView" />
                        <Label fx:id="specific_list_label" text="Specific List View" styleClass="header_label" />
                        <Button fx:id="edit_button" text="Edit" />
                    </children>
                </HBox>
            </top>
            <right>
                <VBox fx:id="right_content" fillWidth="true" style="-fx-border-width:0px 0px 0px 1px; -fx-border-color:white">
                    <children>
                        <Button fx:id="options_button" text="Options" width="${right_content.width}" styleClass="right_content_button"/>
                        <Button fx:id="undo_button" text="Undo" minWidth="${options_button.width}" styleClass="right_content_button" />
                        <Button fx:id="redo_button" text="Redo" minWidth="${options_button.width}" styleClass="right_content_button" />
                        <Button fx:id="save_button" text="Save" minWidth="${options_button.width}" styleClass="right_content_button" />
                    </children>
                </VBox>
            </right>
            <center>
                <ScrollPane fx:id="center_content" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" styleClass="edge-to-edge">
                    <content>
                       <VBox fx:id="list_container" fillWidth="true" alignment="TOP_LEFT" styleClass="list_container">
                            <children>
                            </children>
                            <padding>
                                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>
            </center>
            <!-- <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding> -->
        </BorderPane>
    </children>
    <padding>
        <Insets top="100.0" right="200.0" bottom="100.0" left="200.0" />
    </padding>
</HBox>
